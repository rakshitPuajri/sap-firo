<mvc:View
	controllerName="ui5app.controller.ProductList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<Page
		title="Product list"
		showNavButton="true"
		navButtonPress=".onNavButtonPressed"
		backgroundDesign="Solid">
		<Toolbar>
			<Title text="Products" level="H2" />
			<ToolbarSpacer />

			<SearchField
				width="20rem"
				liveChange=".onFilterProducts"
				placeholder="Search by product name" />
			 <Button
                icon="sap-icon://filter"
                press=".onOpenFilterDialog"
                tooltip="Filter Products" />
		</Toolbar>
		<Table
			id="productsTable"
			items="{ProductsModel>/}">
			<columns>
				<Column>
					<Text text="Product Name" />
				</Column>
				<Column>
					<Text text="Price" />
				</Column>
				<Column>
					<Text text="Stock" />
				</Column>
				<Column>
					<Text text="Reorder Level" />
				</Column>
			</columns>

			<items>
				<ColumnListItem>
					<cells>
						<Text text="{ProductsModel>ProductName}" />
						<Text text="{ProductsModel>UnitPrice}" />
						<Text text="{ProductsModel>UnitsInStock}" />
						<Text text="{ProductsModel>ReorderLevel}" />
					</cells>
				</ColumnListItem>
			</items>

		</Table>
	</Page>

</mvc:View>
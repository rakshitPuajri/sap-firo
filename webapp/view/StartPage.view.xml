<mvc:View
    controllerName="ui5app.controller.StartPage"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt">
    <tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMarginBottom">
        <Button icon="sap-icon://menu2" type="Transparent" tooltip="Menu">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Button>
        <Image src="images/Sap.png" decorative="false"
            press="onLogoPressed" tooltip="SAP Logo" width="70px" height="50px">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Image>
        <Title text="Portfolio Project" wrapping="false" id="productName">
            <layoutData>
                <OverflowToolbarLayoutData priority="Disappear" />
            </layoutData>
        </Title>
        <Text text="Welcome to my Portfolio projects" wrapping="false" id="secondTitle">
            <layoutData>
                <OverflowToolbarLayoutData priority="Disappear" />
            </layoutData>
        </Text>
        <ToolbarSpacer />
        <SearchField width="25rem" id="searchField">
            <layoutData>
                <OverflowToolbarLayoutData priority="Low" group="1" />
            </layoutData>
        </SearchField>
        <Button visible="false" icon="sap-icon://search" type="Transparent" id="searchButton"
            tooltip="Search" />
        <OverflowToolbarButton icon="sap-icon://da" type="Transparent" tooltip="Joule" text="Joule">
            <layoutData>
                <OverflowToolbarLayoutData group="2" />
            </layoutData>
        </OverflowToolbarButton>
        <OverflowToolbarButton icon="sap-icon://source-code" type="Transparent" tooltip="Action 1"
            text="Action 1">
            <layoutData>
                <OverflowToolbarLayoutData group="2" />
            </layoutData>
        </OverflowToolbarButton>
        <OverflowToolbarButton icon="sap-icon://card" type="Transparent" tooltip="Action 2"
            text="Action 2">
            <layoutData>
                <OverflowToolbarLayoutData group="2" />
            </layoutData>
        </OverflowToolbarButton>
        <OverflowToolbarButton icon="sap-icon://action-settings" type="Transparent" text="Settings" />
        <Button icon="sap-icon://bell" type="Transparent" tooltip="Notification">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Button>
        <tnt:ToolHeaderUtilitySeparator />
        <OverflowToolbarButton icon="sap-icon://grid" type="Transparent" text="My Products"
            tooltip="My Products" />
        
    </tnt:ToolHeader>
    <Shell>
        <App>
            <Page title="Home Page">
                <!-- Profile content -->
                <content>
                    <Panel headerText=" Profile">
                        <content>
                            <GenericTile
                                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                header="Rakshit Pujari"
                                subheader="SAP Consultant"
                                press="onRakshitProfile">
                                <TileContent>
                                    <Avatar src="images\RakshitImage.png"
                                        displaySize="L"
                                        displayShape="Square"
                                        class="sapUiSmallMarginEnd" />

                                </TileContent>
                            </GenericTile>

                        </content>
                        <VBox>
                            <GenericTile
                                header="Linkedin"
                                subheader="Rakshit Pujari"
                                mode="LineMode"
                                press="onRakshitLinkedin"
                                class="sapUiSmallMarginBegin sapUiTinyMarginBottom " />
                            <GenericTile
                                header="My Blogs"
                                mode="LineMode"
                                press="onBlog"
                                class="sapUiSmallMarginBegin sapUiTinyMarginBottom" />
                            <GenericTile
                                header="GitHub"
                                mode="LineMode"
                                press="ongithub"
                                class=" sapUiSmallMarginBegin sapUiTinyMarginBottom" />
                        </VBox>
                    </Panel>
                </content>
                <!-- Demo Applications -->
                <content>

                    <Panel headerText="Demo Apps Panel">
                        <content>
                            <GenericTile
                                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                header="Display Materials"
                                subheader="Material Details" press="onMaterialpp">
                                <TileContent footer="App loads the data from PostgressDB via an API call">
                                    <ImageContent src="sap-icon://home-share" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile
                                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                header=" Products App"
                                subheader="Products" press="onProductApp">
                                <TileContent unit="KG" footer="Products Informations">
                                    <ImageContent src="sap-icon://product" />
                                </TileContent>
                            </GenericTile>
                        </content>
                    </Panel>
                </content>
            </Page>
        </App>
    </Shell>

</mvc:View>